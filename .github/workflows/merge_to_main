name: Merge to Main

on:
  push:
    branches:
      - main

jobs:
  merge_to_public:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Push to Football-Public
        uses: ad-m/github-push-action@master
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          branch: main
          repository: trulsbv/Football-Public
