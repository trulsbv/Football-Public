name: Merge to Main

on:
  pull_request:
    types: [closed]
    branches:
      - main

jobs:
  merge_to_public:
    if: github.event.pull_request.merged == true
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Push to Football-Public
        uses: ad-m/github-push-action@master
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          branch: main
          repository: trulsbv/Football-Public
